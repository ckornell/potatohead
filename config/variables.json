{
  "sections": {
    "typography": {
      "line-height": {
        "label": "line height",
        "stylus": "$base-line-height",
        "control": "text",
        "name": "line-height",
        "class": "line-height"
      },
      "font-size": {
        "label": "font size",
        "stylus": "$base-font-size",
        "control": "text",
        "name": "font-size",
        "class": "font-size"
      },
