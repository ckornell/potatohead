{
  "sections": {
    "typography": {
      "line-height": {
        "label": "line height",
        "stylus": "$base-line-height",
        "control": "text",
        "name": "line-height",
        "class": "small-field",
        "hint": "(example: 2.7rem)"
      },
      "font-size": {
        "label": "font size",
        "stylus": "$base-font-size",
        "control": "text",
        "name": "font-size", 
        "class": "small-field",
        "hint": "(example: 1rem)"
      },
      "font-family": {
        "label": "font family",
        "stylus": "$font-family",
        "class": "font-family", 
        "control": "select",
        "name": "font-family",
        "options": ["Arial", "Times New Roman", "Courier New", "Avant Garde"]
      }
    },
    "base colors": {
      "primary": {
        "label": "primary color",
        "stylus": "$primary-color",
        "class": "primary-color",
        "control": "text-field-color",
        "name": "primary-color"
      },
      "secondary": {
        "label": "secondary color",
        "stylus": "$secondary-color",
        "class": "secondary-color",
        "control": "text-field-color",
        "name": "secondary-color"
      },
      "tertiary": {
        "label": "tertiary color",
        "stylus": "$tertiary-color",
        "class": "tertiary-color",
        "control": "text-field-color",
        "name": "tertiary-color"
      }
    },
    "font colors": {
      "light": {
        "label": "light font color",
        "control": "text-field-color",
        "stylus": "$light-font-color"
      },
      "dark": {
        "label": "dark font color",
        "control": "text-field-color",
        "stylus": "$dark-font-color"
      },
      "link": {
       "label": "link font color",
       "control": "text-field-color",
       "stylus": "$link-color"
      },
      "font": {
       "label": "regular font color",
       "control": "text-field-color",
       "stylus": "$font-color"
      }
    },
    "backgrounds": {
      "color": {
        "label": "background color",
        "control": "text-field-color",
        "stylus": "$background-color"
      },
      "header background": {
        "label": "header background color",
        "control": "text-field-color",
        "stylus": "$header-background"
      },
      "footer background": {
        "label": "footer background color",
        "control": "text-field-color",
        "stylus": "$footer-background"
      }
    },
    "button colors": {
      "solid color": {
        "label": "solid color",
        "control": "text-field-color",
        "stylus": "$button-color"
      },
      "disabled color": {
        "label": "disabled color",
        "control": "text-field-color",
        "stylus": "$button-disabled-color"
      },
      "primary color": {
        "label": "primary color",
        "control": "text-field-color",
        "stylus": "$button-primary-color"
      },
      "gradient start": {
        "label": "button gradient start",
        "control": "text-field-color",
        "stylus": "$button-gradient-start"
      },
      "gradient end": {
        "label": "primary color",
        "control": "text-field-color",
        "stylus": "$button-gradient-end"
      }
    }
  },
  "images": {
    "logo": {
      "name": "logo",
      "control": "file",
      "label" : "brand logo"
    },
    "menu": {
      "name": "menu-icon",
      "control": "file",
      "label": "menu icon"
    },
    "small logo": {
      "name": "small-logo",
      "control": "file", 
      "label": "footer (smaller) logo"
    },
    "cart icon": {
      "name": "cart-icon",
      "control": "file",
      "label": "cart icon"
    }
  }
}